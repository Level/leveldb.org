/*--------------------------------------------------------------------
*
* BASE
*
--------------------------------------------------------------------*/

*, *:after, *:before
  -moz-box-sizing: border-box
  -webkit-box-sizing: border-box
  box-sizing: border-box

html
  font-size: 100%

body
  font: 400 $font-base/$line-height-base $font-ffmore
  color: $gray
  -webkit-font-smoothing: antialiased

::-moz-selection
  background-color: $green
  color: white

::selection
  background-color: $green
  color: white

h1, h2, h3, h4, h5, h6
  margin: 30px 0
  color: black
  font-family: $font-franklin
  font-weight: 900

h1, h2, h3
  line-height: $line-height-tight

h1
  font-size: $font-heading-one

h2
  font-size: $font-heading-two

h3
  margin-top: 0
  font-size: $font-heading-three

h4
  font-size: $font-heading-four
  color: lighten($gray, 30%)

h5
  font-size: $font-heading-five

small
  font-size: $font-small

a
  cursor: pointer
  color: $green
  text-decoration: none

  &:hover:not(.button)
    color: $green-dark

  &:hover
    transition: all .5s ease-in
    -webkit-transition: all .5s ease-in

  &:focus
    outline: none

.cf
  &:before,
  &:after
    content: " "
    display: table

  &:after
    clear: both

.pull-left
  float: left

.pull-right
  float: right

img, video
  max-width: 100%

.content
  margin: 0 auto

section
  position: relative
  padding-bottom: 50px
  margin-bottom: 50px

  &:after
    content: ''
    position: absolute
    left: 50%
    top: 100%
    height: 1px
    width: 20%
    margin-left: -10%
    background-color: $gray-lighter

  &.centered
    text-align: center

@media $smartphone

  .intro

    h1
      font-size: $font-heading-three
      line-height: 1

    h3
      font-size: $font-heading-four

@media $tablet

  .content
    width: 80%

@media $desktop

  .content
    width: 60%

  .column
    float: left
    width: 50%

    &:first-of-type
      padding-right: 30px

    &:last-of-type
      padding-left: 30px

    &.column-small
      width: calc(100%/3)
      padding: 0

@media $mobile-devices

  .content
    width: 90%
