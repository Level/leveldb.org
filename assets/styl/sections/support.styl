/*--------------------------------------------------------------------
*
* SUPPORT
*
--------------------------------------------------------------------*/

.support

  p
    &:last-of-type
      margin-bottom: 40px

  .button-twitter
    position: relative
    padding-left: 60px

    &:before
      content: ''
      position: absolute
      top: 0
      background-position: 0 0
      background-repeat: no-repeat
      background-size: contain
      opacity: .5

  .button-twitter:before
    left: 10px
    height: 60px
    width: 60px
    background-image: url('/img/icon-twitter.svg')

@media $desktop

  .support

    .button:not(:last-of-type)
      margin-right: 20px

@media $mobile-devices

  .support

    .button
      &:not(:last-of-type)
        margin-bottom: 20px

@media $tablet

  .support

    .button
      display: block
      width: 50%
      margin: 0 auto 20px

      &:last-child
        margin-bottom: 0
